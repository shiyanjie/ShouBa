<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anim_back_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/anim_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:id="@+id/fl_content_container"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            >
            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="260dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jiayou" />
            <TextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:layout_centerHorizontal="true"
                android:text="排名跌到第6了!\n加油！老铁！"
                android:layout_below="@+id/iv_content"
                android:textStyle="bold"
                android:textSize="@dimen/font_normal3"
                android:textColor="@color/alpha_95_white"
                android:layout_marginTop="@dimen/viewpadding_width"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_content_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:padding="10dp"
            android:src="@drawable/ic_cancel_popup2"
            />

    </RelativeLayout>


</RelativeLayout>