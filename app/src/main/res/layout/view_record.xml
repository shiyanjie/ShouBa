<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">
    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation">

        <LinearLayout
            android:id="@+id/ll_record_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawablePadding="@dimen/viewpadding"
                    android:drawableLeft="@mipmap/ic_record_weight"
                    android:text="@string/weight_weight"
                    android:textColor="?attr/dayNightTwoTextColor"
                    android:textSize="@dimen/font_normal3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/breakfast_suggest"
                    android:textColor="@color/subtitle_text" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="2"
                android:drawableRight="@drawable/line"
                android:gravity="center"
                android:text="最新记录58.5kg"
                android:textColor="@color/main_color" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_action_edit" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation">

        <LinearLayout
            android:id="@+id/ll_record_weidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/weidu"
                    android:gravity="center"
                    android:drawablePadding="@dimen/viewpadding"
                    android:drawableLeft="@mipmap/icon_fuwu_selector"
                    android:textColor="?attr/dayNightTwoTextColor"
                    android:textSize="@dimen/font_normal3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/breakfast_suggest"
                    android:textColor="@color/subtitle_text" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="2"
                android:drawableRight="@drawable/line"
                android:gravity="center"
                android:text="记录身体最新围度"
                android:textColor="@color/subtitle_text"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_action_edit" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation">

        <LinearLayout
            android:id="@+id/ll_record_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawablePadding="@dimen/viewpadding"
                    android:drawableLeft="@mipmap/icon_record"
                    android:text="@string/period"
                    android:textColor="?attr/dayNightTwoTextColor"
                    android:textSize="@dimen/font_normal3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/breakfast_suggest"
                    android:textColor="@color/subtitle_text" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="1"
                android:drawableRight="@drawable/line"
                android:gravity="center"
                android:text=""
                android:visibility="invisible"
                android:textColor="@color/main_color" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_arrow_to" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_daynight_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/viewpadding"
        android:paddingBottom="@dimen/viewpadding"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="1"
                android:text="@string/recommend_today"
                android:textColor="?attr/dayNightTwoTextColor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/viewpadding"
            android:gravity="center"
            android:text="@string/recommend"
            android:textColor="@color/subtitle_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_arrow_to" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation">

        <LinearLayout
            android:id="@+id/ll_daynight_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/breakfast"
                    android:textColor="?attr/dayNightTwoTextColor"
                    android:textSize="@dimen/font_normal3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/breakfast_suggest"
                    android:textColor="@color/subtitle_text" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="1"
                android:drawableRight="@drawable/line"
                android:gravity="center"
                android:text="@string/breakfast_already_eat"
                android:textColor="@color/main_color" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_action_edit" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation">

        <LinearLayout
            android:id="@+id/ll_daynight_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/lunch"
                    android:textColor="?attr/dayNightTwoTextColor"
                    android:textSize="@dimen/font_normal3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/lunch_suggest"
                    android:textColor="@color/subtitle_text" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="1"
                android:drawableRight="@drawable/line"
                android:gravity="center"
                android:text="@string/lunch__already_eat"
                android:textColor="@color/main_color" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_action_edit" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:id="@+id/ll_daynight_supper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/supper"
                    android:textColor="?attr/dayNightTwoTextColor"
                    android:textSize="@dimen/font_normal3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/viewpadding"
                    android:layout_weight="1"
                    android:text="@string/supper_suggest"
                    android:textColor="@color/subtitle_text" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/viewpadding"
                android:layout_weight="1"
                android:drawableRight="@drawable/line"
                android:gravity="center"
                android:text="@string/supper__already_eat"
                android:textColor="@color/main_color" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_action_edit" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>