<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_gray_deepgray"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/nestedScrollView"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">
                <CheckBox
                    android:id="@+id/cb_selectall"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="@string/selectall"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/servicepersonal"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/remarks"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal3"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/umeng_divide"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">
                <CheckBox
                    android:id="@+id/cb_abdomen"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="@string/abdomen"
                    />
                <Spinner
                    android:id="@+id/spinner__abdomen_servicepersonal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/spingarr_servicepersonal"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"

                    />
                <EditText
                    android:id="@+id/et_abdomen_mar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/font_normal"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/umeng_divide"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">
                <CheckBox
                    android:id="@+id/cb_arm"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="@string/arm"
                    />
                <Spinner
                    android:id="@+id/spinner_arm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/spingarr_servicepersonal"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    />

                <EditText
                    android:id="@+id/et_arm_remarks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/font_normal"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/umeng_divide"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">
                <CheckBox
                    android:id="@+id/cb_thigh"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/thigh"
                    android:layout_gravity="center_vertical"
                    />
                <Spinner
                    android:id="@+id/spinner_thigh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/spingarr_servicepersonal"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    />
                <EditText
                    android:id="@+id/et_thigh_remarks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/font_normal"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/umeng_divide"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">
                <CheckBox
                    android:id="@+id/cb_shank"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/shank"
                    android:layout_gravity="center_vertical"
                    />
                <Spinner
                    android:id="@+id/spinner_shank"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/spingarr_servicepersonal"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    />
                <EditText
                    android:id="@+id/et_shank_remarks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="@null"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/font_normal"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:background="@color/umeng_divide"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">
                <CheckBox
                    android:id="@+id/cb_plaster"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/plaster"
                    android:layout_gravity="center_vertical"
                    />
                <Spinner
                    android:id="@+id/spinner_plaster"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/spingarr_servicepersonal"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    />
                <EditText
                    android:id="@+id/et_plaster_remarks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/font_normal"
                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>