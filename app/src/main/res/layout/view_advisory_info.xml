<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_advisory_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        style="@style/news_summary_card_view"
        android:background="@drawable/selector_gray_deepgray"
        app:cardElevation="@dimen/cardview_cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="测算信息"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="进店日期"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:text="2017-7-1"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <ImageView
                android:id="@+id/iv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_date" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="姓名"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="性别"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:entries="@array/gender"
                android:gravity="center_horizontal"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="年龄"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/viewpadding"
                android:text="岁"
                android:textColor="?attr/dayNightTwoTextColor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="身高"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_height"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/viewpadding"
                android:text="cm"
                android:textColor="?attr/dayNightTwoTextColor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="体重"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/viewpadding"
                android:layout_weight="1"
                android:background="@drawable/bt_shape"
                android:orientation="horizontal"
                android:padding="@dimen/viewpadding">


                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="?attr/dayNightThreeTextColor"
                    android:textSize="@dimen/font_normal" />

                <View
                    android:layout_width="@dimen/line_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/viewpadding"
                    android:layout_marginRight="@dimen/viewpadding"
                    android:background="@color/bt_shape" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/viewpadding"
                    android:text="斤"
                    android:textColor="?attr/dayNightTwoTextColor" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_advisory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bt_shape"
                android:gravity="center"
                android:padding="@dimen/viewpadding"
                android:text="测算"
                android:textColor="@color/main_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="标准体重"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_standard_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/viewpadding"
                android:text="斤"
                android:textColor="?attr/dayNightTwoTextColor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="应减斤数"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_need_subtract_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/viewpadding"
                android:text="斤"
                android:textColor="?attr/dayNightTwoTextColor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="总目标"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_total_goals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/viewpadding"
                android:text="月"
                android:textColor="?attr/dayNightTwoTextColor" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="购买疗程"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_course_of_treatment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:entries="@array/course_of_treatment"
                android:gravity="center_horizontal"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="疗程数"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_courseoftreatment_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputSize"
        android:layout_marginTop="@dimen/viewpadding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="金额"
            android:textColor="?attr/dayNightTwoTextColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bt_shape"
            android:orientation="horizontal"
            android:padding="@dimen/viewpadding">

            <EditText
                android:id="@+id/et_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="?attr/dayNightThreeTextColor"
                android:textSize="@dimen/font_normal" />

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/viewpadding"
                android:layout_marginRight="@dimen/viewpadding"
                android:background="@color/bt_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/viewpadding"
                android:text="元"
                android:textColor="?attr/dayNightTwoTextColor" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>