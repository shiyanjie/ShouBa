            android:paddingBottom="@dimen/viewpadding_width"
            android:paddingTop="@dimen/viewpadding_width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
